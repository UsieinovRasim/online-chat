<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do %>
  <div class="flex flex-col h-96 justify-between">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8" id="room-container">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <%= render @rooms %>
      </div>
    </div>
  </div>
<% end %>

<% if current_user.present? %>
  <%= form_with model: @new_room, class: "mt-4" do |f| %>
    <%= f.text_field :title, placeholder: 'chat name..', class: "group relative w-46 flex justify-center py-2 px-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer basis-1/12" %>
    <br/>
    <div class="flex flex-row">
      <%= f.submit "Create room", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer basis-1/12" %>
    </div>
  <% end %>
<% end %>
