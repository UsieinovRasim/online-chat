<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg my-4 py-2 pl-1" >
  <div class="flex flex-row">
    <div class="column basis-7/12">
      <%= link_to room.title, room_path(room), class: "text-current text-blue-500 mr-4", rel: "noopener noreferrer" %>
    </div>
    <div class="column basis-2/12">
      <%= room&.messages&.last&.body %>
    </div>
    <div class="column basis-1/12">
      <%= button_to 'Delete', room_path(room), method: :delete %>
    </div>
  </div>
</div>
<br>
